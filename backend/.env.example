# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database
DATABASE_URL=sqlite:///nanospace.db
# For PostgreSQL: postgresql://username:password@localhost/nanospace
# For MySQL: mysql://username:password@localhost/nanospace

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Email Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@nanospace.com

# SMS Configuration (Twilio)
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN_SECONDS=60

# File Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
